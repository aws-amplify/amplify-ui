{
  "private": true,
  "scripts": {
    "install": "yarn run theme-base build:all",
    "postinstall": "patch-package",
    "build": "yarn workspaces run build",
    "angular": "yarn workspace @aws-amplify/ui-angular",
    "react": "yarn workspace @aws-amplify/ui-react",
    "vue": "yarn workspace @aws-amplify/ui-vue",
    "theme-base": "yarn workspace @aws-amplify/ui-theme-base",
    "angular-docs": "yarn workspace angular-docs",
    "docs": "yarn workspace docs",
    "next-example": "yarn workspace next-example",
    "e2e": "yarn workspace e2e",
    "vue-docs": "yarn workspace vue-docs",
    "build:icons": "yarn react build:icons",
    "build:angular": "yarn angular build",
    "build:angular:watch": "yarn angular build --watch",
    "build:vue": "yarn vue-docs build",
    "build:theme-base": "yarn theme-base build",
    "dev:angular": "yarn angular-docs start",
    "dev:vue": "yarn vue-docs serve --port 3001 --host localhost",
    "test": "yarn react test && yarn e2e test",
    "prepare": "husky install",
    "pull-environments": "echo \"Pass -limit {ENVIRONMENT} to pull a single environment\" && sh environments/pull-environments.sh"
  },
  "workspaces": [
    "docs",
    "vue-docs",
    "angular-docs",
    "environments/*",
    "examples/*",
    "packages/*"
  ],
  "resolutions": {
    "@mdx-js/mdx/**/trim": "^0.0.3",
    "fs-extra": "^10.0.0",
    "next": "^11.0.1",
    "ws": "^7.4.6"
  },
  "dependencies": {
    "patch-package": "^6.4.7",
    "postinstall-postinstall": "^2.1.0"
  },
  "devDependencies": {
    "husky": ">=6",
    "lint-staged": ">=10",
    "prettier": "2.3.2",
    "wait-on": "^6.0.0"
  },
  "lint-staged": {
    "*.{ts,tsx,js,css,md,mdx}": "prettier --write"
  }
}
