{
  "name": "@aws-amplify/ui-build-system-tests",
  "version": "1.0.0",
  "private": true,
  "devDependencies": {
    "@supercharge/promise-pool": "^2.4.0",
    "commander": "^10.0.1",
    "esbuild-register": "^3.5.0",
    "json": "^11.0.0",
    "strip-json-comments-cli": "^2.0.2"
  },
  "scripts": {
    "checkReactNativeLogs": "node --require esbuild-register ./scripts/checkReactNativeLog.ts",
    "generateDetoxConfig": "node --require esbuild-register ./scripts/generateDetoxConfig.ts",
    "pull": "./environments/pull-environments.sh",
    "test:web": "yarn --cwd e2e test:web",
    "test:react-native:build": "yarn --cwd e2e detox:build:android:debug",
    "test:react-native": "yarn --cwd e2e detox:e2e:android:debug",
