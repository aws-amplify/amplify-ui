{
  "compilerOptions": {
    "moduleResolution": "node",
    "baseUrl": ".",
    "declaration": true,
    "esModuleInterop": true,
    "jsx": "react-jsx",
    "rootDir": "./src",
    "outDir": "./dist",
    "importHelpers": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "module": "esnext",
    "target": "es2015"
  },
  "exclude": ["node_modules", "src/**/*.test.ts", "src/**/*.test.tsx"],
  "include": ["src/**/*.ts", "src/**/*.tsx"]
}
