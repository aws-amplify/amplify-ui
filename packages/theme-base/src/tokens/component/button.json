{
  "button": {
    "padding": {
      "small": { "value": "{sizes.3.value}" },
      "medium": { "value": "{sizes.4.value}" },
      "large": { "value": "{sizes.5.value}" }
    },

    "fullwidth": { "value": "100%" },
    "transition": { "value": "all 250ms" },

    "disabled": {
      "opacity": { "value": 0.4 },
      "cursor": { "value": "not-allowed" }
    },

    "border": {
      "radius": { "value": "{border.radius.medium.value}" },
      "radiusSmall": { "value": "{border.radius.small.value}" },
      "radiusMedium": { "value": "{border.radius.medium.value}" },
      "radiusLarge": { "value": "{border.radius.large.value}" },

      "secondary": {
        "value": "1px solid {button.colors.border.secondary.value}"
      }
    },

    "colors": {
      "text": {
        "primary": { "value": "{colors.white.value}" },
        "secondary": { "value": "{colors.black.value}" },
        "tertiary": { "value": "{colors.black.value}" },
        "link": { "value": "{colors.purple.500.value}" }
      },
      "bg": {
        "primary": { "value": "{colors.purple.500.value}" },
        "primaryHover": { "value": "{colors.purple.400.value}" },
        "primaryLoading": { "value": "{colors.purple.400.value}" },
        "secondaryHover": { "value": "{colors.purple.50.value}" },
        "tertiary": { "value": "{colors.transparent.value}" },
        "tertiaryHover": { "value": "{colors.purple.200.value}" }
      },
      "border": {
        "primary": { "value": "{colors.purple.500.value}" },
        "secondary": { "value": "{colors.purple.200.value}" }
      }
    },

    "height": {
      "primary": { "value": "{sizes.12.value}" },
      "large": { "value": "{sizes.12.value}" },
      "medium": { "value": "{sizes.10.value}" },
      "small": { "value": "{sizes.8.value}" }
    },

    "text": {
      "align": { "value": "center" },
      "decorationLink": { "value": "underline" }
    },

    "font": {
      "weight": { "value": "{font.weight.semibold.value}" },
      "size": {
        "small": { "value": "{font.size.small.value}" },
        "medium": { "value": "{font.size.medium.value}" },
        "large": { "value": "{font.size.large.value}" }
      }
    }
  }
}
