{
  "extends": "./tsconfig.base.json",
  "compilerOptions": {
    "jsx": "react-native",

    // turn on for React Native packages due to type conflict between @types/node and @types/react-native
    // reference: https://github.com/DefinitelyTyped/DefinitelyTyped/issues/15960
    "skipLibCheck": true,

    // Metro Bundler transpiles source code syntax to esnext
    "target": "esnext"
  }
}
